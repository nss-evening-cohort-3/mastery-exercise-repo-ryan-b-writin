
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.Students.Count == 0)
{
    <h2>No Students found!</h2>
}
else
{
    <h2>Students:</h2>
    <table class="table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Major</th>
        </tr>
        @foreach (var item in ViewBag.Students)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Major</td>
            </tr>
        }
    </table>
}
